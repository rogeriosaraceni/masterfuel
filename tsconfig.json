{
    "extends": "astro/tsconfigs/strict",
    "include": [".astro/types.d.ts", "**/*"],
    "exclude": ["dist"],

    "compilerOptions": {
        "paths": {
            "@assets/*": ["./src/assets/*"],
            "@data/*": ["./src/data/*"],
            "@layouts/*": ["./src/layouts/*"],
            "@components/*": ["./src/components/*"],
            "@styles/*": ["./src/styles/*"],
            "@utils/*": ["./src/utils/*"]
        }
    }
}
