---
interface Props {
	type: "submit" | "reset" | "button",
    dataBsToggle?: string,
    dataBsTarget?: string,
    name: string,
}

const { type, dataBsToggle, dataBsTarget, name } = Astro.props
---

<button 
    type{type} 
    class="btn btn-ghost-primary"
    data-bs-toggle={dataBsToggle} 
    data-bs-target={dataBsTarget} 
>
    {name}
</button>
